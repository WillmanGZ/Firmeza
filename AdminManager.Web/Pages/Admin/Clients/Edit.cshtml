@page "{id}"
@model AdminManager.Web.Pages.Admin.Clients.EditModel
@{
    Layout = "_AdminLayout";
}

<h3 class="mb-4">Editar cliente</h3>

<form method="post" class="card p-3 shadow-sm">
    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    <input type="hidden" asp-for="Input.Id" />

    <div class="mb-3">
        <label asp-for="Input.Email" class="form-label">Correo</label>
        <input asp-for="Input.Email" class="form-control" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.UserName" class="form-label">Nombre de usuario</label>
        <input asp-for="Input.UserName" class="form-control" />
        <span asp-validation-for="Input.UserName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.PhoneNumber" class="form-label">Teléfono</label>
        <input asp-for="Input.PhoneNumber" class="form-control" />
        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Guardar cambios</button>
    <a asp-page="./Index" class="btn btn-secondary mt-2">Cancelar</a>
</form>
