@page
@model AdminManager.Web.Pages.Admin.Clients.IndexModel
@{
    Layout = "_AdminLayout";
}

<h3 class="mb-4">Clientes registrados</h3>
<p>
    <a asp-page="./Create" class="btn btn-primary">Nuevo cliente</a>
</p>


@if (Model.Clients.Any())
{
    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>Email</th>
                <th>Usuario</th>
                <th>Telefono</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var client in Model.Clients)
            {
                <tr>
                    <td>@client.Email</td>
                    <td>@client.UserName</td>
                    <td>@client.PhoneNumber</td>
                    <td class="text-end">
                        <a asp-page="./Edit" asp-route-id="@client.Id" class="btn btn-sm btn-success">Editar</a>
                        <a asp-page="./Details" asp-route-id="@client.Id" class="btn btn-sm btn-info text-white">Detalles</a>
                        <a asp-page="./Delete" asp-route-id="@client.Id" class="btn btn-sm btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">No hay clientes registrados.</div>
}
