@page
@model AdminManager.Web.Pages.Admin.ClientsModel
@{
    Layout = "_AdminLayout";
}

<h2>Clientes</h2>
<p>Total: @Model.TotalClients</p>

<table class="table table-striped">
    <thead class="table-dark">
        <tr>
            <th>Correo</th>
            <th>Nombre de usuario</th>
            <th>Confirmado</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var client in Model.Clients)
        {
            <tr>
                <td>@client.Email</td>
                <td>@client.UserName</td>
                <td>@(client.EmailConfirmed ? "Sí" : "No")</td>
            </tr>
        }
    </tbody>
</table>


