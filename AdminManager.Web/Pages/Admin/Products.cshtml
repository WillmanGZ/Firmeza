@page
@model AdminManager.Web.Pages.Admin.ProductsModel
@{
    Layout = "_AdminLayout";
}

<h2>Productos</h2>
<p>Total: @Model.TotalProducts</p>

<table class="table table-striped">
    <thead class="table-dark">
        <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Precio</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model.Products)
        {
            <tr>
                <td>@p.Name</td>
                <td>@p.Description</td>
                <td>$@p.Price</td>
            </tr>
        }
    </tbody>
</table>
