@page "{id}"
@model AdminManager.Web.Pages.Admin.Products.DetailsModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Detalles del producto";
}

<h3 class="mb-4">Detalles del producto</h3>

<div class="card p-3 shadow-sm">
    <dl class="row">
        <dt class="col-sm-3">ID</dt>
        <dd class="col-sm-9">@Model.Product.Id</dd>

        <dt class="col-sm-3">Nombre</dt>
        <dd class="col-sm-9">@Model.Product.Name</dd>

        <dt class="col-sm-3">Descripción</dt>
        <dd class="col-sm-9">@Model.Product.Description</dd>

        <dt class="col-sm-3">Precio</dt>
        <dd class="col-sm-9">$@Model.Product.Price</dd>
    </dl>

    <div>
        <a asp-page="./Edit" asp-route-id="@Model.Product.Id" class="btn btn-success me-2">Editar</a>
        <a asp-page="./Index" class="btn btn-secondary">Volver</a>
    </div>
</div>

