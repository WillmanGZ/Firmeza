@page
@model AdminManager.Web.Pages.Admin.Products.IndexModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Productos";
}

<h3 class="mb-4">Productos registrados</h3>

<p>
    <a asp-page="./Create" class="btn btn-primary">Nuevo producto</a>
</p>

@if (Model.Products.Any())
{
    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Precio</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Products)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                    <td>$@item.Price</td>
                    <td class="text-end">
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-success">Editar</a>
                        <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white">Detalles</a>
                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">No hay productos registrados.</div>
}
